<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:d="urn:import:org.gwtbootstrap3.demo.client.ui">

    <b:Row>
        <b:Column size="XS_12">

            <b:PageHeader text="Pagination"/>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="Basic"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:Pagination>
                        <b:AnchorListItem icon="ANGLE_DOUBLE_LEFT"/>
                        <b:AnchorListItem text="1"/>
                        <b:AnchorListItem text="2"/>
                        <b:AnchorListItem icon="ANGLE_DOUBLE_RIGHT"/>
                    </b:Pagination>
                    <b.html:ClearFix/>
                    <b:Pagination paginationSize="SMALL">
                        <b:AnchorListItem icon="ANGLE_DOUBLE_LEFT"/>
                        <b:AnchorListItem text="1"/>
                        <b:AnchorListItem text="2"/>
                        <b:AnchorListItem icon="ANGLE_DOUBLE_RIGHT"/>
                    </b:Pagination>
                    <b.html:ClearFix/>
                    <b:Pagination paginationSize="LARGE">
                        <b:AnchorListItem icon="ANGLE_DOUBLE_LEFT"/>
                        <b:AnchorListItem text="1"/>
                        <b:AnchorListItem text="2"/>
                        <b:AnchorListItem icon="ANGLE_DOUBLE_RIGHT"/>
                    </b:Pagination>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:Pagination&gt;\n
                        \s\s&lt;b:AnchorListItem active="true/false" enabled="true/false" text="..." icon="..."&gt;\n
                        \s\s&lt;b:AnchorListItem active="true/false" enabled="true/false" text="..." icon="..."&gt;\n
                        \s\s&lt;b:AnchorListItem active="true/false" enabled="true/false" text="..." icon="..."&gt;\n
                        &lt;/b:Pagination&gt;\n\n
                        &lt;b:Pagination paginationSize="SMALL/LARGE"&gt;\n
                        \s\s&lt;b:AnchorListItem active="true/false" enabled="true/false" text="..." icon="..."&gt;\n
                        \s\s&lt;b:AnchorListItem active="true/false" enabled="true/false" text="..." icon="..."&gt;\n
                        \s\s&lt;b:AnchorListItem active="true/false" enabled="true/false" text="..." icon="..."&gt;\n
                        &lt;/b:Pagination&gt;\n
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="Pager"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:Pager/>
                    <b.html:ClearFix/>
                    <b:Pager previousText="Older" nextText="Newer"/>
                    <b.html:ClearFix/>
                    <b:Pager previousText="Older" previousIcon="ANGLE_DOUBLE_LEFT" nextText="Newer"
                             nextIcon="ANGLE_DOUBLE_RIGHT"/>
                    <b.html:ClearFix/>
                    <b:Pager previousText="Older" previousIcon="ANGLE_DOUBLE_LEFT" nextText="Newer"
                             nextIcon="ANGLE_DOUBLE_RIGHT" alignToSides="true"/>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:Pager/&gt;\n\n
                        &lt;b:Pager previousText="..." nextText="..."/&gt;\n\n
                        &lt;b:Pager previousText="..." previousIcon="..." nextText="..." nextIcon="..."/&gt;\n\n
                        &lt;b:Pager previousText="..." previousIcon="..." nextText="..." nextIcon="..."
                        alignToSides="true/false"/&gt;\n
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>
        </b:Column>

    </b:Row>

</ui:UiBinder>
