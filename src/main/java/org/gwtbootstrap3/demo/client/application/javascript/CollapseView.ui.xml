                    <b:Heading size="H4" text="Java code"/>
                    <d:PrettyPre addStyleNames="lang-java">
                        @UiField\n
                        PanelCollapse collapseOne;\n\n

                        // Add a show handler\n
                        collapseOne.addShowHandler(...);\n\n

                        // Add a hide handler\n
                        collapseOne.addHideHandler(...);
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>

