             xmlns:d="urn:import:org.gwtbootstrap3.demo.client.ui">

    <b:Row>
        <b:Column size="XS_12">

            <b:PageHeader text="Panels"/>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="Basic"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:Panel>
                        <b:PanelHeader>
                            <b:Heading size="H3" text="Panel Header"/>
                        </b:PanelHeader>
                        <b:PanelBody>
                            <b.html:Strong text="Panel Body"/>
                        </b:PanelBody>
                        <b:PanelFooter>
                            <b.html:Strong text="Panel Footer"/>
                        </b:PanelFooter>
                    </b:Panel>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:Panel&gt;\n
                        \s\s&lt;b:PanelHeader&gt;\n
                        \s\s\s\s&lt;b:Heading size="H3" text="..."/&gt;\n
                        \s\s&lt;/b:PanelHeader&gt;\n
                        \s\s&lt;b:PanelBody&gt;\n
                        \s\s\s\s&lt;b.html:Strong text="..."/&gt;\n
                        \s\s&lt;/b:PanelBody&gt;\n
                        \s\s&lt;b:PanelFooter&gt;\n
